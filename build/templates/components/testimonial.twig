{% import '_macros/macros' as macro %}
<section class="row">
	<div class="grid grid-cols-6 h-full md:grid-cols-12 divide-y-4 divide-[var(--primary)] md:divide-x-4 md:divide-y-0 xl:min-h-[45vh]">

		<div class="col-span-6 {% if image %}md:col-span-7 h-full{% else %}md:col-span-12{% endif %}">
			<div class="container py-8 sm:py-12 md:py-14 lg:py-20 xl:py-32 h-full">
				<figure class="flex justify-center gap-4 sm:gap-8 h-full md:gap-10 lg:gap-12 xl:gap-16 max-w-4xl mx-auto relative flex-col 2xl:max-w-2xl">

					<blockquote class="title-2 block relative">
						<div class="block relative">
							<span class="title-1 text-[var(--primary)]">"</span>
						</div>
						<span class="relative z-20 block -tranlsate-y-20">
							{{ quote }}
						</span>
					</blockquote>

					{% if credit %}
						<cite class="title-1 block text-3xl not-italic">{{ credit }}</cite>
					{% endif %}

				</figure>
			</div>
		</div>

		{% if image %}
			<div class="col-span-6 md:col-span-5 relative h-full">
				<img src="{{ image.url() }}" alt="{{ image.alt }}" width="{{ image.width }}" height="{{ image.height }}" class="md:absolute md:top-0 md:left-0 w-full h-full object-cover">
			</div>
		{% endif %}

	</div>
</section>
