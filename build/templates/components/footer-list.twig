<div class="lg:p-6 xl:p-12">
    <h2 class="title-3 pb-4">{{ heading }}</h2>

    {% if items ?? '' %}
        <ul class="flex flex-col gap-1">
            {% for item in items %}

                {% if isMatrix %}
                    {% set link = item.linkItem %}
                {% else %}
                    {% set link = item %}
                {% endif %}

                {% if link.url %}
                    <li>
                        <a referrer="{% if link.target == '_blank' %}noopener noreferrer{% endif %}" target="{% if link.target == '_blank' %}_blank{% endif %}" class="underline-offset-4 hover:underline lg:text-sm xl:text-base leading-tight inline-block" href="{{ link.url }}">{{ link.text }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    {% endif %}

    {% if address ?? '' %}
        <address class="not-italic lg:text-sm xl:text-base">
            {{ address | raw }}
        </address>
    {% endif %}

</div>