
{% set rotations = ['rotate-[6deg]', 'absolute left-1/2 top-0 -translate-x-1/2 z-20 -rotate-[12deg] md:static md:translate-x-8 md:w-8/12 md:-rotate-6 md:-my-4', '-rotate-[7deg] md:rotate-[2deg] md:-translate-x-2'] %}

<section class="row py-8 sm:py-12 md:py-14 lg:py-20 xl:py-32">

    <div class="grid grid-cols-6 md:grid-cols-12">

        <div class="col-span-6 lg:col-span-5 xl:col-span-4">

            <div class="container relative flex flex-row md:flex-col md:items-center md:justify-center mx-auto w-11/12 justify-between mb-16 pt-8 md:mx-auto md:my-0 md:p-0 max-w-lg md:h-full lg:max-w-2xl xl:max-w-3xl lg:pr-0 ">

                {% for image in images %}
                    <div class="relative w-5/12 md:w-8/12 {{ rotations[loop.index - 1]}}">
                        <img src="{{ image.url() }}" alt="{{ image.alt }}" width="{{ image.width }}" height="{{ image.height }}" class="">
                    </div>
                {% endfor %}

            </div>

        </div>

        <div class="col-span-6 lg:col-span-7 xl:col-span-8">
            <div class="container">
            
                <div class="max-w-3xl">
                    {% if heading %}
                        <h2 class="mb-6 md:mb-8 lg:mb-10">{{ heading }}</h2>
                    {% endif %}
                    <div class="w-content">
                        {{ body }}
                    </div>

                    {% if button.url %}
                        <div class=" mt-6 md:mt-8 lg:mt-10">
                            <a href="{{ button.url }}" {% if button.target == "_blank" %}target="_blank" rel="noopener noreferrer"{% endif %} class="btn">{{ button.text }}</a>
                        </div>
                    {% endif %}
                </div>
            
            </div>
        </div>

    </div>

</section>